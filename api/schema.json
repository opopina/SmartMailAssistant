{
  "schema": 2,
  "name": "SmartMailAPI",
  "description": "API para SmartMail Assistant",
  "types": [],
  "functions": [
    {
      "name": "analyzeEmail",
      "type": "function",
      "description": "Analiza un correo electrónico usando IA",
      "async": true,
      "parameters": [
        {
          "name": "messageId",
          "type": "string",
          "description": "ID del mensaje a analizar"
        }
      ]
    },
    {
      "name": "organizeMail",
      "type": "function",
      "description": "Organiza un correo en la carpeta correspondiente",
      "async": true,
      "parameters": [
        {
          "name": "messageId",
          "type": "string",
          "description": "ID del mensaje a organizar"
        },
        {
          "name": "folderPath",
          "type": "string",
          "description": "Ruta de la carpeta destino"
        }
      ]
    }
  ],
  "events": {
    "onNewMailReceived": {
      "type": "function",
      "description": "Se dispara cuando se recibe un nuevo correo",
      "parameters": [
        {
          "name": "folder",
          "type": "object",
          "description": "Carpeta donde se recibió el correo"
        },
        {
          "name": "messages",
          "type": "array",
          "description": "Lista de mensajes nuevos",
          "items": {
            "type": "object"
          }
        }
      ]
    }
  }
} 